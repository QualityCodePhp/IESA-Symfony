<!DOCTYPE html>

<title>Lead</title>

{% block body %}
    <h1>Lead</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lead.id }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ lead.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ lead.lastname }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ lead.birthday ? lead.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ lead.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ lead.email }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ lead.state }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('lead_index') }}">back to list</a>

    <a href="{{ path('lead_edit', {'id': lead.id}) }}">edit</a>

    {{ include('lead/_delete_form.html.twig') }}
{% endblock %}